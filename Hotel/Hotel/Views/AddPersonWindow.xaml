<Window x:Class="Hotel.Views.AddPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.Views"
        mc:Ignorable="d"
        Title="Добавление посетителя" Height="284.534" Width="433.193">
    <Grid>
        <Label Content="Паспортные данные" HorizontalAlignment="Left" Margin="30,126,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.399,1.747" />
        <Label Content="ФИО" HorizontalAlignment="Left" Margin="30,46,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.399,1.747"/>

        <Button Content="Добавить" Command="{Binding AddPersonCommand}" HorizontalAlignment="Left" Margin="160,212,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="177,46,0,0" TextWrapping="Wrap" Text="{Binding Person.FullName}" VerticalAlignment="Top" Width="221"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="177,130,0,0" TextWrapping="Wrap" Text="{Binding Person.PassportData}" VerticalAlignment="Top" Width="221" RenderTransformOrigin="0.481,0.438"/>
    </Grid>
</Window>
